<!DOCTYPE html>
<html>
  <head>
    <title>Vecino</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
	<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  </head>
  <div>
	<%= link_to '', root_path, class: "btn btn-primary glyphicon glyphicon-home" %>
	<span class="text-info">
	  <% if user_signed_in? %>
	  <%= link_to '', destroy_user_session_path, method: :delete, data: { confirm: "Esta seguro que quiere cerrar sesion?" }, class: "btn btn-primary glyphicon glyphicon-off" %>
	  <strong>Usuario: </strong><%= current_user.name.split[0].capitalize%>
	  <%= link_to '', edit_user_registration_path, class: "glyphicon glyphicon-cog"%>
	  <% end  %>
	</span>
  </div>
  <body>
	<div class="container">
	  <p class="notice"><%= notice  %></p>
	  <p class="alert"><%= alert %></p>
	</div>
    <%= yield %>
  </body>
  <script>
	window.fbAsyncInit = function() {
	FB.init({
	appId      : '{your-app-id}',
	cookie     : true,
	xfbml      : true,
	version    : '{latest-api-version}'
	});

	FB.AppEvents.logPageView();

	};

	(function(d, s, id){
	var js, fjs = d.getElementsByTagName(s)[0];
	if (d.getElementById(id)) {return;}
	js = d.createElement(s); js.id = id;
	js.src = "https://connect.facebook.net/en_US/sdk.js";
	fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));
  </script>
</html>
